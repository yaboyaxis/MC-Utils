{
  "compilerOptions": {
    "rootDir": "./src",
    "outDir": "./dist",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "target": "ES2020",
    "resolveJsonModule": true,
    "downlevelIteration": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
